{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XNote",
  "version": "1.0.0",
  "identifier": "com.bytedance.xnote",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "XNote",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' data: blob: asset: http://asset.localhost http://localhost:* ws://localhost:* ipc: http://ipc.localhost 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: blob: asset: http://asset.localhost https://www.plantuml.com https://plantuml.com;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$HOME/**"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
        "entitlements": "Entitlements.plist"
    }
  }
}
